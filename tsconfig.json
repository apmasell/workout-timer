{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "es2020",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./output",
    "rootDir": "./src/",
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2020"
  }
}